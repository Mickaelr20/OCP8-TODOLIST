{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Création d'une tâche</h1>
{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('task_create')}) }}
		{{ form_widget(form) }}

		<div class="d-flex justify-content-between">
			<a type="button" href="{{ path('task_list') }}" class="btn btn-primary"><i class="bi bi-arrow-left"></i>&nbsp;Retour à la liste des tâches</a>
			<button type="submit" class="btn btn-success">Ajouter</button>
		</div>
		{{ form_end(form) }}

	</div>
{% endblock %}
